<!--pages/shopping/shopping.wxml-->
<view class="main">
    <view wx:if="{{hasList}}">
        <view class="cart-box">
            <view class="cart-list" wx:for="{{cartsList}}" wx:key="{{index}}">
                <icon wx:if="{{item.selected}}" type="success" color="#c0a97a" data-index="{{index}}"  class="cart-pro-select" bindtap="selectList"/>
                <icon wx:else type="circle" class="cart-pro-select" data-index="{{index}}" bindtap="selectList"/>
                <navigator url="../details/details?id={{item.id}}"><image class="cart-thumb" src="{{item.image}}"></image></navigator>
                <text class="cart-pro-name">{{item.goodname}}</text>
                <text class="cart-pro-price">￥{{item.price}}</text>
                <view class="cart-pro-info-box"> 
                <text class="cart-pro-guige">规格：{{item.size}}</text>
                
                </view>
                <view class="cart-pro-box">
                <text class="cart-pro-grade">等级：{{item.lv}}</text>

                </view>
                <view class="cart-count-box">
                    
                    <text class="cart-count-num">数量：{{item.byNumber}}</text>
                    
                </view>
                <text class="cart-del" bindtap="deleteList" data-index="{{index}}">×</text>
            </view>
        </view>

        <view class="cart-footer">
            <icon wx:if="{{selectAllStatus}}" type="success_circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <icon wx:else type="circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <navigator url="../orders/orders"><view class="order-icon" bindtap="toPayOrder">去结算</view></navigator>
            <text>全选</text>
            <text class="cart-toatl-price">￥{{totalPrice}}</text>
           
        </view>
    </view>
    <view wx:else>
        <view class="cart-no-data">购物车是空的哦~</view>
    </view>
</view>